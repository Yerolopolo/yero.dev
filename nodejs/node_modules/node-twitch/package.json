{
  "name": "node-twitch",
  "version": "0.5.0",
  "description": "A wrapper for the Helix Twitch API in NodeJS.",
  "main": "dist/index.js",
  "typedocMain": "src/index.ts",
  "scripts": {
    "patch": "npm test && npm run build && npm version patch",
    "minor": "npm test && npm run build && npm version minor",
    "major": "npm test && npm run build && npm version major",
    "docs": "typedoc --out ./docs --exclude ./src/util.ts --entryPointStrategy resolve --excludePrivate --excludeProtected --excludeExternals ./src",
    "test": "jest",
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Plazide/node-twitch.git"
  },
  "keywords": [
    "twitch",
    "api",
    "helix",
    "new",
    "server",
    "node",
    "typescript"
  ],
  "author": "Carl Hall√©n",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Plazide/node-twitch/issues"
  },
  "homepage": "https://github.com/Plazide/node-twitch#readme",
  "dependencies": {
    "node-fetch": "2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^27.4.1",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "braintree-jsdoc-template": "^3.3.0",
    "eslint": "^6.8.0",
    "eslint-config-plazide": "^0.1.5",
    "eslint-plugin-jest": "^23.6.0",
    "jest": "^27.5.1",
    "nodemon": "^1.18.10",
    "open": "^8.4.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^8.10.2",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  }
